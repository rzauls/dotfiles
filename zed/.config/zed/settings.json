// https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "base_keymap": "VSCode",
  "theme": "Catppuccin Mocha - No Italics",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_features": {
    "calt": false
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "terminal": {
    "font_size": 14,
    "dock": "left"
  },
  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": true
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "prettier": {
        "allowed": true,
        "plugins": ["@prettier/plugin-php"],
        "parser": "php"
      }
    }
  }
}
