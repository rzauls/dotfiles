// https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "base_keymap": "VSCode",
  "theme": "Catppuccin Macchiato",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 16,
  "buffer_font_weight": 500,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_features": {
    "calt": false
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "terminal": {
    "font_size": 14,
    "dock": "left"
  },
  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": true
  },

  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "formatter": "language_server"
    }
  },
  "lsp": {
    "gdscript": {
      "binary": {
        "path": "/usr/bin/nc",
        "arguments": ["127.0.0.1", "6005"]
      }
    }
  }
}
